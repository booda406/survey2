<div>
      <%= f.label :content, "Question" %><br/>
      <%= f.text_area :content, :rows => 3 %><br/>
  <div>
    <%= f.fields_for :option_booleans do |boolean| %>
    <%= render "boolean_fields", :f => boolean %>
    <% end %>
  </div>
  <div>
    <%= f.fields_for :option_strs do |str| %>
      <%= render "str_fields", :f => str %>
    <% end %>
  </div>
<p><%= f.link_to_add "add a boolean", :option_booleans %></p>
<p><%= f.link_to_add "add a string", :option_strs %></p>
</div>
<%= f.link_to_remove "Remove this question" %><br/>